# Stripe Configuration
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Stripe Price IDs (create products in Stripe Dashboard)
# Convention Special: $79/mo
STRIPE_CONVENTION_PRICE_ID=price_convention_special
# Founder Rate: $59/mo
STRIPE_FOUNDER_PRICE_ID=price_founder
# Regular Growth: $99/mo
STRIPE_GROWTH_MONTHLY_ID=price_growth_monthly
# Growth Annual: $79/mo billed annually
STRIPE_GROWTH_ANNUAL_ID=price_growth_annual

# Base URL (your deployed domain)
NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app

# Supabase (optional for demo mode)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
