# Stripe Configuration
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Stripe Price IDs (create products in Stripe Dashboard)
# Convention Special: $79/mo
STRIPE_CONVENTION_PRICE_ID=price_convention_special
# Founder Rate: $59/mo
STRIPE_FOUNDER_PRICE_ID=price_founder
# Regular Growth: $99/mo
STRIPE_GROWTH_MONTHLY_ID=price_growth_monthly
# Growth Annual: $79/mo billed annually
STRIPE_GROWTH_ANNUAL_ID=price_growth_annual

# Base URL (your deployed domain)
NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app

# Supabase (optional for demo mode)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Google Analytics 4
# Get your Measurement ID from Google Analytics > Admin > Data Streams
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (alternative to direct GA4)
# Get your Container ID from Google Tag Manager > Admin
# Format: GTM-XXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Pool Chemistry API (future integration)
POOL_CHEMISTRY_API_KEY=your-api-key-here
POOL_CHEMISTRY_API_URL=https://api.pool-chemistry.com

# Weather API (future integration)
WEATHER_API_KEY=your-weather-api-key-here
WEATHER_API_URL=https://api.weather.com

# Hotjar Analytics (heatmaps & session recordings)
# Get your Site ID from https://insights.hotjar.com/site/list
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_site_id
NEXT_PUBLIC_HOTJAR_VERSION=6
